<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".HomeActivity"
    android:background="@color/white">


    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv"
        android:layout_width="match_parent"
        android:layout_height="444dp"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="71dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.4"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/categories_rv"
        android:layout_width="match_parent"
        android:layout_height="38dp"
        android:layout_above="@+id/rv"
        android:layout_marginBottom="11dp"
        android:orientation="horizontal" />

    <ImageButton
        android:id="@+id/sidebar"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="23dp"
        android:layout_marginLeft="40dp"
        android:layout_marginTop="25dp"
        android:background="@color/white"
        app:srcCompat="@drawable/side_bar" />

    <ImageButton
        android:id="@+id/user_image"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginTop="25dp"
        android:layout_marginEnd="40dp"
        android:layout_marginRight="25dp"
        android:background="@color/white"
        app:srcCompat="@drawable/user_image" />

    <TextView
        android:id="@+id/find_the_be"
        android:layout_width="151dp"
        android:layout_height="58dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="28dp"
        android:layout_marginTop="64dp"
        android:gravity="top"
        android:text="@string/find_the_be"
        android:textAppearance="@style/find_the_be" />

    <TextView
        android:id="@+id/search_bar"
        android:layout_width="451dp"
        android:layout_height="63dp"
        android:layout_above="@+id/categories_rv"
        android:layout_below="@+id/find_the_be"
        android:layout_marginLeft="25dp"
        android:layout_marginTop="26dp"
        android:layout_marginRight="25dp"
        android:layout_marginBottom="14dp"
        android:background="@drawable/search_bar"
        android:hint="find your coffee"
        android:paddingStart="50dp"
        android:paddingLeft="40dp"
        android:paddingTop="11dp"
        android:paddingBottom="11dp"
        android:textColor="@color/white"
        android:textSize="14sp" />




    <ImageButton
        android:id="@+id/imageButton6"
        android:layout_width="57dp"
        android:layout_height="42dp"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="28dp"
        android:background="@color/white"
        app:srcCompat="@drawable/home" />

    <ImageButton
        android:id="@+id/shopping_cart_item"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="135dp"
        android:layout_marginLeft="135dp"
        android:layout_marginBottom="31dp"
        android:layout_toEndOf="@+id/favorites_items"
        android:layout_toRightOf="@+id/favorites_items"
        android:background="@color/white"
        app:srcCompat="@drawable/shopping" />

    <ImageButton
        android:id="@+id/favorites_items"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_alignParentBottom="true"
        android:layout_marginStart="90dp"
        android:layout_marginLeft="90dp"
        android:layout_marginBottom="23dp"
        android:layout_toEndOf="@+id/imageButton6"
        android:layout_toRightOf="@+id/imageButton6"
        android:background="@color/white"
        app:srcCompat="@drawable/heartfull" />


</RelativeLayout>