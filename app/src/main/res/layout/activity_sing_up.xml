<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/main_bg"
    tools:context=".SingUPActivity">

    <TextView
        android:id="@+id/regerster_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="150dp"
        android:text="You Have To Register First !"
        android:textAllCaps="true"
        android:textColorHint="@color/black"
        android:textSize="18dp"
        android:textColor="@color/black"/>


    <EditText
        android:id="@+id/sing_up_user_name_input"
        android:layout_width="340dp"
        android:layout_height="51dp"
        android:layout_below="@+id/regerster_txt"
        android:layout_marginTop="59dp"
        android:background="@drawable/input_design"
        android:hint="enter your full name"
        android:layout_centerHorizontal="true"
        android:paddingLeft="30dp"
        android:textColorHint="@color/black"
        android:textColor="@color/black"
        android:textSize="13dp"

        />

    <EditText
        android:id="@+id/sign_up_email_input"
        android:layout_width="340dp"
        android:layout_height="51dp"
        android:background="@drawable/input_design"
        android:layout_below="@+id/sing_up_user_name_input"
        android:layout_alignParentBottom="@+id/sing_up_user_name_input"
        android:layout_marginTop="13dp"
        android:hint="enter your email"
        android:inputType="textEmailAddress"
        android:layout_centerHorizontal="true"
        android:paddingLeft="30dp"
        android:textColorHint="@color/black"
        android:textColor="@color/black"
        android:textSize="13dp"

        />

    <EditText
        android:id="@+id/sign_up_password_input"
        android:layout_width="340dp"
        android:layout_height="51dp"
        android:layout_below="@+id/sign_up_email_input"
        android:layout_marginTop="13dp"
        android:hint="passworrd"
        android:inputType="textPassword"
        android:background="@drawable/input_design"
        android:textColorHint="@color/black"
        android:layout_centerHorizontal="true"
        android:paddingLeft="30dp"
        android:textColor="@color/black"
        android:textSize="13dp"


        />

    <EditText
        android:id="@+id/sign_up_confirm_password_input"
        android:layout_width="340dp"
        android:layout_height="51dp"
        android:layout_below="@+id/sign_up_password_input"
        android:layout_marginTop="13dp"
        android:hint="confirm password "
        android:inputType="textPassword"
        android:background="@drawable/input_design"
        android:textColorHint="@color/black"
        android:layout_centerHorizontal="true"
        android:paddingLeft="30dp"
        android:textColor="@color/black"
        android:textSize="13dp"

        />

    <Button
        android:id="@+id/sign_up_btn_btn"
        android:layout_width="325dp"
        android:layout_height="62dp"
        android:layout_below="@+id/sign_up_confirm_password_input"
        android:layout_marginTop="53dp"
        android:text="regester"
        android:textAllCaps="true"
        android:textSize="18sp"
        android:background="@drawable/btn_design"
        android:textAlignment="center"
        tools:layout_editor_absoluteX="135dp"
        tools:layout_editor_absoluteY="524dp"
        android:layout_centerHorizontal="true"/>

    <TextView
        android:id="@+id/return_log_in_page"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/sing_in"
        android:layout_below="@id/sign_up_btn_btn"
        android:layout_marginTop="23dp"
        android:textColor="@color/black"
        android:layout_centerHorizontal="true"/>



</RelativeLayout>